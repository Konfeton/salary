            <children>
                <TextField fx:id="surname" editable="false" prefHeight="31.0" prefWidth="152.0" promptText="Фамилия"/>
                <TextField fx:id="name" editable="false" prefHeight="31.0" prefWidth="152.0" promptText="Имя"/>
                <TextField fx:id="category" editable="false" prefHeight="31.0" prefWidth="152.0" promptText="Разряд"/>
                <TextField fx:id="login" prefHeight="31.0" prefWidth="152.0" promptText="Логин"/>
                <PasswordField fx:id="password" prefHeight="31.0" prefWidth="152.0" promptText="Пароль"/>
