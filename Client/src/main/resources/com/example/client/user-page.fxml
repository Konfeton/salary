        </VBox>
        <VBox alignment="TOP_CENTER" layoutX="146.0" layoutY="104.0" prefHeight="230.0" prefWidth="100.0"
              spacing="23.0">
            <children>
                <Label text="Фамилия">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Label>
                <Label text="Имя"/>
                <Label text="Разряд"/>
                <Label text="Логин"/>
                <Label text="Пароль"/>
                <Label text="Заработная плата">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
